---
import Layout from "../layouts/Layout.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Hero from "../components/Hero.astro";
import Projects from '../components/Projects.astro'
import Code from "../components/icons/Code.astro";
import UserCheck from "../components/icons/UserCheck.astro";
import AboutMe from "../components/AboutMe.astro"
import Footer from "../components/Footer.astro";
---

<Layout title="Portfolio Sergio Ventura" description="Web Developer">
    <main class="px-4">
        <SectionContainer class="py-16 md:py-36">
            <Hero>
                <slot />
            </Hero>
        </SectionContainer>

        <div class="space-y-24">
            <SectionContainer id="projects">
                <h2
                    class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-white"
                >
                    <Code class="size-7" />
                    Projects
                </h2>
                <Projects/>
            </SectionContainer>
        </div>

        <SectionContainer class="mt-20" id="about-me">
            <h2
                class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-white"
            >
                <UserCheck class="size-7" />
                About me
            </h2>
            
            <AboutMe />
        </SectionContainer>

        <Footer />
    </main>
</Layout>
